# Avatar Adam - Backend Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
PROJECT_NAME=Avatar Adam
VERSION=0.1.0
DEBUG=false

# ============================================================================
# DATABASE
# ============================================================================
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/avatar_adam

# ============================================================================
# SECURITY - JWT
# ============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CORS
# ============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:5174","http://localhost:3000"]

# ============================================================================
# DATABASE CONNECTION POOL
# ============================================================================
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true
DB_ECHO=false

# ============================================================================
# SECURITY
# ============================================================================
BCRYPT_ROUNDS=12

# ============================================================================
# OPENROUTER - LLM (Language Model)
# ============================================================================
# Get API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=openai/gpt-4o

# ============================================================================
# ELEVENLABS - TTS (Text-to-Speech)
# ============================================================================
# Get API key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=nPczCjzI2devNBz1zQrb
ELEVENLABS_MODEL=eleven_monolingual_v1

# ============================================================================
# OPENAI - STT (Speech-to-Text) and Embeddings
# ============================================================================
# Get API key from: https://platform.openai.com/api-keys
# Check quota at: https://platform.openai.com/account/billing/overview
OPENAI_API_KEY=sk-your-openai-api-key
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ============================================================================
# PINECONE - Vector Database
# ============================================================================
# Get API key from: https://app.pinecone.io
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=avatar-adam
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# ============================================================================
# RAG SETTINGS
# ============================================================================
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5

# ============================================================================
# MAILGUN - Email Service
# ============================================================================
# Get credentials from: https://app.mailgun.com
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.mailgun.org
MAILGUN_FROM_EMAIL=noreply@your-domain.mailgun.org
MAILGUN_REGION=US
MAILGUN_WEBHOOK_SIGNING_KEY=your-webhook-signing-key

# ============================================================================
# REPORT INACCURACY
# ============================================================================
REPORT_RECIPIENT_EMAIL=admin@example.com

# ============================================================================
# HEYGEN - LIVE AVATAR
# ============================================================================
# Get API key from: https://www.heygen.com/
HEYGEN_API_KEY=your-heygen-api-key
HEYGEN_AVATAR_ID=your-avatar-id
HEYGEN_API_URL=https://api.liveavatar.com
HEYGEN_SANDBOX_MODE=true

# ============================================================================
# TESTING & DEVELOPMENT
# ============================================================================
# Set to true to use mock STT service (no API costs, for testing)
# Set to false to use real OpenAI Whisper API
USE_MOCK_STT=false

# If USE_MOCK_STT=true, set this to control phrase selection
# true = random phrases, false = cycle through phrases
MOCK_STT_RANDOM=true
